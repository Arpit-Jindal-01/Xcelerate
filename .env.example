# ============================================================
# CSIDC Industrial Land Monitoring System
# Environment Configuration Template
# ============================================================

# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# Application Settings
APP_NAME="CSIDC Industrial Land Monitoring System"
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://csidc_user:secure_password@localhost:5432/csidc_monitoring

# Google Earth Engine
# Get these from: https://console.cloud.google.com/
GEE_PROJECT_ID=your-gee-project-id
GEE_SERVICE_ACCOUNT=your-service-account@your-project.iam.gserviceaccount.com
GEE_PRIVATE_KEY_PATH=/path/to/your-gee-private-key.json

# Machine Learning
ML_DEVICE=cuda  # or "cpu" if no GPU available
ML_MODEL_PATH=./models/weights

# Detection Thresholds
ENCROACHMENT_THRESHOLD=0.01  # 1%
ILLEGAL_CONSTRUCTION_THRESHOLD=1.10  # 110%
UNUSED_LAND_HEATMAP_THRESHOLD=0.05  # 5%
CHANGE_DETECTION_THRESHOLD=0.70  # 70%

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5500"]
